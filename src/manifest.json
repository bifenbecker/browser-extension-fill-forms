{
  "name": "Fill form",
  "version": "0.1.0",
  "description": "Automated fill forms on websites",
  "default_locale": "en",
  "manifest_version": 3,
  "permissions": ["scripting", "activeTab", "identity", "storage"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ikea.com/*/shoppingcart/"],
      "js": ["content_scripts/ikea_fill_script.js"]
    },
    {
      "matches": [
        "https://www.ikea.com/gb/en/order/continue/?checkoutVersion=v*&checkoutId=*"
      ],
      "js": ["content_scripts/ikea_script_fill.js"]
    },
    {
      "matches": ["https://www.waterstones.com/registration/"],
      "js": ["content_scripts/water_stones_site/registration_script.js"]
    },
    {
      "matches": ["https://www.waterstones.com/checkout/basket"],
      "js": ["content_scripts/water_stones_site/checkout_script.js"]
    },
    {
      "matches": ["https://www.waterstones.com/checkout/delivery"],
      "js": ["content_scripts/water_stones_site/delivery_details_script.js"]
    },
    {
      "matches": ["https://www.waterstones.com/checkout/payment"],
      "js": ["content_scripts/water_stones_site/payment_script.js"]
    }
  ]
}
